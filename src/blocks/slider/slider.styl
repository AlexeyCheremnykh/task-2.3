@import "../../colors"

.slider
  height: 65px
  padding-left: 20px

  & &__line
    border: none

  &__line
    cursor: pointer
    position: relative
    top: 60%
    height: 5px
    background-color: $grey-e5
    border-radius: 3px

  &__handle.ui-slider-handle
    cursor: pointer
    outline: none
    border: none
    top: -7px
    width: 19px
    height: 19px
    border-radius: 50%

  &_type_red
    box-sizing: border-box

    .slider__handle.ui-slider-handle
      background-color: $main-red

    .ui-slider-tip
      visibility: visible
      opacity: 1
      top: -32px
      left: 9px
      width: 35px
      height: 24px
      background-color: $main-red
      border-radius: 5px
      border: none
      font-family: "Lato", "Arial", sans-serif
      font-weight: 900
      font-size: 13px
      color: $white
      text-align: center
      line-height: 24px

      &:after
        content: ""
        display: block
        width: 0
        height: 0
        top: 24px
        left: 18px
        border-style: solid
        border-width: 4px 5px 0 5px
        border-color: $main-red transparent transparent transparent

      &:before
        border: none

    & .slider__handle:hover .ui-slider-tip,
    & .slider__handle:focus .ui-slider-tip
      top: -32px

  &_type_cyan
    box-sizing: border-box

    .slider__handle.ui-slider-handle,
    .ui-slider-range
      background-color: $main-cyan

    .ui-slider-line
      display: none

    .ui-slider-pip
      font-size: 11px
      color: $grey-d1
      font-family: "Lato", "Arial", sans-serif
      font-weight: 900

    .ui-slider-label
      top: -5px
