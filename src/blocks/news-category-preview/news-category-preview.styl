@import "../../colors"

.news-category-preview
  box-sizing: border-box
  position: relative
  width: 1050px
  padding: 20px 80px
  background-color: $white
  box-shadow: 0 0 10px 0 $black-shadow
  margin: 0 auto 30px

  @media (max-width: 1090px)
    width: 770px

  @media (max-width: 788px)
    width: 448px

  &__content
    display: flex
    justify-content: space-between

  &__article-preview
    @media (max-width: 1090px)
      &:last-child
        display: none

    @media (max-width: 788px)
      &:first-child
        display: none

  &__scroll-btn
    position: absolute
    height: 212px
    top: 20.7%

    &_right
      right: 17px

    &_left
      left: 17px
