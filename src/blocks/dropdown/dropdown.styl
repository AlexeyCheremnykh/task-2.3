@import "../../colors"

.select2-container
  width: 100% !important
  .selection
    .select2-selection
      box-sizing: border-box
      outline: none
      border: none
      min-height: 28px
      width: 100%
      padding-left: 6px
      padding-right: 33px
      background-color: $grey-e5
      border-radius: 2px
      font-family: "Source Sans Pro", "Arial", sans-serif
      font-weight: 400
      font-style: normal
      font-stretch: normal
      font-size: 14px

      &--multiple
        padding-right: 6px

      &:focus
        background-color: $grey-d5

      &__placeholder
        color: $grey-88

      &__rendered
        color: $grey-66

      .select2-selection__arrow
        width: 33px
        height: 28px
        border-radius: 0 3px 3px 0
        top: 0
        right: 0
        background-color: $main-cyan
        padding: 0

        b
          width: 8px
          height: 8px
          border: none
          border-left: 2px solid $white
          border-top: 2px solid $white
          transform: rotate(-135deg)
          top: 9px
          left: 15px

  .select2-dropdown
    border: none
    .select2-results
      &__options
        color: $white
        font-family: "Source Sans Pro", "Arial", sans-serif
        font-weight: 400
        font-style: normal
        font-stretch: normal
        font-size: 14px
        background-color: $main-cyan
        border-radius: 2px
        max-height: 132px

      &__option
        padding-left: 13px

        &[aria-selected="true"]
          background-color: $light-cyan
          color: $grey-66

        &--highlighted
          background-color: $cyan
