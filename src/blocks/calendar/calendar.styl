.calendar
  width: 279px

  &__day
    height: 109px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 300
    font-size: 80px
    text-align: center
    color: #ffffff
    line-height: 110px
    letter-spacing: -0.04em
    background-color: #e75735
    border-radius: 4px 4px 0 0

  &__datepicker
    .ui-datepicker
      width: 100%
      padding: 0
      border: none

      &-header
        padding: 0
        border: none
        border-radius: 0
        height: 43px
        background-color: #d54c2c
        color: #ffffff
        font-family: "Lato", "Arial", sans-serif
        font-weight: 300
        font-size: 24px
        letter-spacing: -0.03em

      &-year
        display: none

      &-prev
        position: relative
        float: left
        height: 100%
        top: 0
        left: 0

      &-next
        position: relative
        float: right
        height: 100%
        top: 0
        right: 0

      &-next-hover,
      &-prev-hover
        cursor: pointer
        background-color: #c44325
        border: none
        border-radius: 0
        right: 0
        left: 0

      .ui-icon
        background-image: none
        width: 9px
        height: 9px
        border-left: 2px solid #ffffff
        border-bottom: 2px solid #ffffff
        top: 55%

        &-circle-triangle-e
          transform: rotate(-135deg)

        &-circle-triangle-w
          transform: rotate(45deg)
          left: 50% + 9px

      &-title
        line-height: 1.6em

      &-calendar
        margin: 0

        th
          height: 27px
          padding: 0
          font-family: "Lato", "Arial", sans-serif
          font-size: 9px
          letter-spacing: 0.05em
          color: #ffffff
          background-color: #e75735

        td
          border-right: 1px solid #fff
          border-bottom: 1px solid #fff
          width: 39px
          padding: 0

          &:last-child
            border-right: none

          .ui-state-default
            font-family: "Source Sans Pro", "Arial", sans-serif
            font-size: 20px
            border: none
            padding: 0
            color: #868686
            background-color: #f2f2f2
            line-height: 39px
            text-align: center

          .ui-state-active
            background-color: #e75735
            color: #ffffff

        .ui-datepicker-other-month
          background-color: #f2f2f2
          opacity: 1

          .ui-state-default
            color: #ffffff

  &__today
    box-sizing: border-box
    width: 100%
    height: 49px
    background-color: #e5e5e5
    border-radius: 0 0 4px 4px
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    font-size: 13px
    letter-spacing: 0.05em
    line-height: 49px
    text-transform: uppercase
    color: #868686
    padding-left: 20px
    text-align: left
    outline: none
    border: none
    cursor: pointer

    &:hover
      background-color: #dedede

    &:focus
      border: 2px solid #868686
      padding-left: 18px
      line-height: 45px
