.news
  margin: 0 auto
  width: 1290px

  @media (max-width: 1350px)
    width: 1050px

  @media (max-width: 1090px)
    width: 100%

  &::after
    display: block
    content: ""
    clear: both

  &__categories-navigation
    position: fixed
    float: left

    @media (max-width: 1350px)
      position: static
      margin-bottom: 10px

    @media (max-width: 1090px)
      float: none

  &__categories-preview
    float: right

    @media (max-width: 1090px)
      float: none
      width: 100%

  &__preview
    margin: 0 auto 30px

  .categories-navigation
    @media (max-width: 1350px)
      width: 1050px

    @media (max-width: 1090px)
      width: 100%

    &__list
      @media (max-width: 788px)
        display: flex
        flex-wrap: wrap
        width: 300px
        margin-left: auto
        margin-right: auto
        justify-content: center

    &__category
      @media (max-width: 1350px)
        display: inline-block
        margin-left: 15px
        background: none

      &_selected
        @media (max-width: 1350px)
          background: none

      &:hover
        @media (max-width: 1350px)
          background: none

        & .categories-navigation__link
          @media (max-width: 1350px)
            color: #888888
