.horizontal-preview-section
  box-sizing: border-box
  position: relative
  width: 1050px
  padding: 20px 0
  background-color: #ffffff
  box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

  &__title
    width: 890px
    margin: 0 auto
    border-bottom: 2px solid #e5e5e5

  &__link
    text-decoration: none
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    text-transform: uppercase
    color: #aaaaaa
    font-size: 20px

    &:hover
      color: #888888

  &__content
    margin: 10px auto
    width: 890px
    display: flex
    justify-content: space-between

  &__button-wrapper
    position: absolute
    top: 50%
    transform: translateY(-50%)

    &_right
      right: 17px

    &_left
      left: 17px

