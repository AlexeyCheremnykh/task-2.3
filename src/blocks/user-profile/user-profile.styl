@import "../../colors"

.user-profile
  width 16.6875rem
  height 5.875rem
  display flex

  @media (max-width 600px)
    height auto
    width 14.6875rem

  &__avatar
    align-self flex-start
    margin-right 0.75rem

  &__info
    align-self flex-end
    position relative
    box-sizing border-box
    width 10.1875rem
    padding 0.5rem 0.625rem 0.625rem
    border-radius 0.5rem
    text-align center
    font-family "Lato", "Arial", sans-serif

    @media (max-width 600px)
      width 8.9375rem
      height 5rem

    &::before
      position absolute
      left -0.375rem
      top 2.5rem
      content ""
      display block
      border-style solid
      border-width 0.375rem 0.375rem 0.375rem 0

      @media (max-width 600px)
        top 2.125rem

  &__name
    font-weight 400
    font-size 1.125rem
    max-height 1.375rem
    overflow hidden
    text-overflow ellipsis
    margin-bottom 0.0625rem
    word-spacing -0.05em

    @media (max-width 600px)
      font-size 0.9375rem

  &__profession
    font-weight 900
    font-size 0.6875rem
    text-transform uppercase
    max-height 0.8125rem
    overflow hidden
    text-overflow ellipsis
    word-spacing 0.125rem
    letter-spacing 0.05em

    @media (max-width 600px)
      font-size 0.625rem

  &__socials
    text-align center

  &__social
    width 1.875rem
    height 1.875rem
    display inline-block
    background-image url("img/social_icons.png")
    margin-top 0.375rem
    margin-left 0.3125rem
    margin-right 0.3125rem

    @media (max-width 600px)
      margin-top 0.125rem

  &__info_cyan
    background-color $main-cyan

    &::before
      border-color transparent $main-cyan transparent transparent

    & ^[0]__name
      color $white

    & ^[0]__profession
      color $white

    & ^[0]__social_fb
      background-position -89px -4px

    & ^[0]__social_twitter
      background-position -7px -2px

    & ^[0]__social_dribbble
      background-position -5px -43px

  &__info_grey
    background-color $grey-e5

    &::before
      border-color transparent $grey-e5 transparent transparent

    & ^[0]__name
      color $main-red

    & ^[0]__profession
      color $grey-4f

    & ^[0]__social_fb
      background-position -119px -4px

    & ^[0]__social_twitter
      background-position -52px -2px

    & ^[0]__social_dribbble
      background-position -46px -43px
