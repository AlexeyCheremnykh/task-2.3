@import "../../colors"

.tick-box
  font-family: "Lato", "Arial", sans-serif
  font-weight: 400
  font-size: 0.9375rem
  cursor: pointer
  display: block
  padding-left: 1.75rem
  height: 1.4375rem
  line-height: 1.4375rem
  position: relative

  &_not-labeled
    padding-left: 1.4375rem

  &__auxiliary-checkbox
    display: none

  &__checkmark
    position: absolute
    left: 0
    top: 0
    width: 1.4375rem
    height: 1.4375rem
    background-color: $grey-e5

    &::after
      position: absolute
      content: ""
      display: block
      width: 0.5625rem
      height: 0.25rem
      transform: rotate(-45deg)
      top: 0.4375rem
      right: 0.375rem
      border-left: 0.125rem solid $grey-ce
      border-bottom: 0.125rem solid $grey-ce

  &__auxiliary-checkbox:checked + &__checkmark
    background-color: $main-cyan

    &::after
      border-left: 0.125rem solid $white
      border-bottom: 0.125rem solid $white

  &_shape_round &__checkmark
    border-radius: 50%

  &_shape_square &__checkmark
    border-radius: 0.3125rem
