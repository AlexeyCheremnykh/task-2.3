.articles
    display: flex
    justify-content: space-between
    width: 1160px
    margin-left: auto
    margin-right: auto

    &__left
        width: 30.172%
        margin-right: 15px

    &__container
        margin-bottom: 30px
        background-color: #ffffff
        padding: 20px 30px
        border-radius: 5px
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

    &__categories       
        position: sticky
        top: 70px                  

    &__category
        cursor: pointer
        display: block
        line-height: 40px

        &:last-child
            border: none        

        &-link
            text-decoration: none
            font-family: "Lato"
            color: #aaaaaa
            padding-left: 10px

        &_selected
            background-color: #eeeeee

            & > a 
                color: #888888
        
        &:hover
            background-color: #f9f9f9
    
    &__title
        margin-top: 0
        text-decoration: none
        font-family: "Lato"
        font-weight: 900
        text-transform: uppercase
        color: #aaaaaa
        font-size: 20px
        border-bottom: 2px solid #e5e5e5

    &__filter
        &-title
            font-family: "Lato"
            font-weight: 400
            color: #444444
            margin: 20px 0
        
        &-author-field
            box-sizing: border-box
            outline: none
            border: none
            width: 288px
            height: 28px
            background-color: #e5e5e5
            padding-left: 13px
            padding-bottom: 4px
            font-family: "Lato"
            font-weight: 400
            font-style: normal
            font-stretch: normal
            font-size: 14px
            letter-spacing: 0.01em        
            color: #666666

        &-tags
            margin-bottom: 20px       

    &__slider-wrapper
        height: 50px
        padding-left: 15px

        & .slider
            top: 38px

    &__popular
        width: 61%
    
    &__article
        margin-bottom: 16px
        font-family: "Lato"
        position: relative
        border-bottom: 1px solid #e5e5e5

        &-title
            display: inline-block

        &-title, &-category, &-link
            &:hover
                color: #000099

        &-category
            margin-top: 0
            display: inline-block

        &-footer
            display: flex
            justify-content: space-between

        &-tags
            list-style: none
            padding: 0

            &-label
                display: inline-block
                margin-right: 5px
        
            &-item
                display: inline-block
                cursor: default   

        &-link
            text-decoration: none
            color: #000000        

        &-date
            position: absolute         
            top: 18.720px
            right: 0


body[data-select2-id="19"]
    .select2-results__option[aria-selected="true"]
        color: #aaaaaa !important


@media (max-width: 1175px)
    .articles
        width: 100%

        .search
            display: flex
            justify-content: flex-end
            width: 100%
            
            &__field
                padding-right: 33px
                flex-grow: 1
        
        &__filter
            &-author-field
                width: 100%
            &-tags
                .select2-container
                    width: 100% !important
                    .selection 
                        .select2-selection
                            width: 100%

        &__slider-wrapper
            padding-left: 5.208%
            .slider
                width: 100%                

@media (max-width: 725px)
    .articles
        display: block

        &__left
            width: 100%      
            display: flex
            flex-direction: column
            align-content: space-between
            max-height: 415px
            flex-wrap: wrap
        
        &__categories
            position: static
            box-sizing: border-box
            width: 49.6%
            margin: 0
        
        &__filter
            width: 49.6%
            box-sizing: border-box

        &__search
            box-sizing: border-box
            order: 1
            margin-top: 4px
            margin-bottom: 0
            width: 49.6%
        
        &__popular
            box-sizing: border-box
            width: 100%
        
        &__category
            line-height: 33px

@media(max-width: 500px)
    .articles
        &__left
            display: block
            max-height: none
        
        &__filter, &__search, &__categories
            width: 350px
            margin-bottom: 30px
            margin-left: auto
            margin-right: auto
        
        &__category
            line-height: 40px
        
@media(max-width: 450px)
    .articles
        &__popular
            padding: 20px 15px
            
        &__article-footer
            .user-profile
                &__info
                    height: 73px
                    width: 143px

                    &::before
                        top: 30px
                
                &__photo
                    height: 65px
                    width: 65px

                &__name
                    font-size: 16px
                    margin-top: 4px
                
                &__profession
                    font-size: 10px
                
                &__social-icon
                    margin-top: 0

            .percentage
                margin-left: 8px
                canvas
                    width: 75px 
                    height: 75px
                
                &__value
                    top: 17px
                    font-size: 33px
                    width: 75px
            
