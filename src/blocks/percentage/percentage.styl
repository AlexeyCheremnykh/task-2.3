@import "../../colors"

.percentage
  position: relative
  font-family: "Lato", "Arial", sans-serif
  font-weight: 300
  font-size: 2.5rem
  height: 2.375em

  @media (max-width: 600px)
    font-size: 2.1rem

  &__value
    cursor: default
    position: absolute
    top: 0
    line-height: 2.375em
    width: 2.375em
    text-align: center
    color: $grey-9d
    letter-spacing: -0.05em
