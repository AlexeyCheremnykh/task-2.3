@import "../../colors"

.text-field
  box-sizing border-box
  width 100%
  height 100%
  padding 0.5625rem 0.8125rem 0.1875rem 0.8125rem
  resize none
  background-color $grey-e5
  outline-color $grey-66
  border none
  border-radius 0.25rem
  color $grey-66
  font-size 0.875rem
  font-family "Source Sans Pro", "Arial", sans-serif
  letter-spacing 0.01em

  &::placeholder
    color $grey-88

  &_outlined
    border 0.1875rem solid $white
    border-radius 0.375rem
    padding 0.975rem 1.1rem
    font-family "Lato", "Arial", sans-serif
    font-size 0.7813rem
    letter-spacing 0.06em
    color $grey-77
    outline none

    &:focus
      background-color $grey-de
