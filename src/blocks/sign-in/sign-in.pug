include ../standard-button/standard-button.pug

doctype html
html(lang="en")
    head
        title Sign in
    body
        .sign-in
            a(href="index.html" class="sign-in__logo") LOGO
            h1.sign-in__page-title Sign in
            form.sign-in__form
                .sign-in__email
                    label.sign-in__label Email
                        input.sign-in__field

                .sign-in__password
                    label.sign-in__label Password
                        a(href="#" class="sign-in__forgot-password") Forgot your password?
                        input(type="password" class="sign-in__field")

                +standard_button("big", "blue", "Sign in")(class="sign-in__button")

                p.sign-in__no-account Don't have an account? 
                    a(href="sign-up.html" class="sign-in__sign-up") Sign up

