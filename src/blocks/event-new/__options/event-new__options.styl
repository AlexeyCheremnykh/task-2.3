.event-new
    &__event-start-label
        font-family: "Lato"
        font-size: 17px

    &__event-start-field
        background-color: #e5e5e5
        outline: none
        border: none
        color: #666666
        border-radius: 4px
        margin-left: 5px   

    &__attendees-number    
        background-color: #e5e5e5
        outline: none
        border: none        
        border-radius: 4px
        color: #666666
        font-size: 14px
        padding-left: 13px
        padding-right: 10px
        font-family: "Lato"
        font-weight: 400
        letter-spacing: 0.01em
    
    &__select-category
        .dropdown
            width: 182px

    &__options
        text-align: left

        .standard-button
            font-family: "Lato"
            font-size: 12px
            width: 125px
            margin-right: 15px

        .event-new__stage-title
            margin-bottom: 35px

    &__option
        margin-bottom: 25px

        .tick-box
            margin-bottom: 15px
       
        .ui-spinner
            border: none
            height: 25px
            width: 100px            

            .ui-spinner-input
                width: 80px
                margin: 0
                height: 100%
                box-sizing: border-box
            
            .ui-spinner-button:active
                border: none
                background: #888888

        &-title
            font-family: "Lato"
            font-size: 17px

    &__speaker
        border-bottom: 1px solid #e5e5e5        
        width: 410px
        height: 95px
        padding: 15px
        display: flex
        justify-content: space-between
        align-content: center
        margin-left: auto
        margin-right: auto

        &:last-child
            border: none

        &:focus
            background-color: #d5d5d5
            outline: none
    
    &__speaker-profile,
    &__speaker-info
        display: inline-block
    
    &__speaker-topic,
    &__speaker-start
        margin: 19px 0
        font-family: "Lato"

    &__speaker-topic-title,
    &__speaker-start-time
        font-weight: 400
    
    &__added-speakers
        height: 265px
        overflow: auto
        background-color: #f5f5f5

    &__speakers-buttons
        margin-top: 10px  