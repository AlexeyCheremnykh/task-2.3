@import "../../../colors"

.event-new
  &__stage
    box-shadow: 0 0 0.625rem 0 $black-shadow
    background-color: $white
    padding: 1.5625rem 1.25rem
    margin-bottom: 0.9375rem

    &_narrow
      box-sizing: border-box
      width: 49%

      @media (max-width: 710px)
        box-sizing: content-box
        width: 17.4375rem
        margin-left: auto
        margin-right: auto

  &__stage-title
    margin-top: 0
    margin-bottom: 1.875rem
