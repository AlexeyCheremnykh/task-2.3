@import "../../colors"

.page-header
  box-sizing border-box
  width 100%
  height 3.75rem
  background-color $grey-44
  box-shadow 0 0 0.125rem 0 $black-shadow
  position fixed
  top 0
  z-index 1

  &__content
    width 65rem
    height 100%
    margin 0 auto
    display flex
    justify-content space-between
    align-items center

    @media (max-width 1110px)
      width 95.151%

    @media (max-width 765px)
      justify-content flex-start

  &__menu-icon
    display none
    cursor pointer

    @media (max-width 765px)
      margin-right 0.625rem
      display block

  &__menu-bar
    width 1.25rem
    height 0.125rem
    background-color $grey-de
    margin 0.25rem 0

  &__logo
    font-family "Lato", "Arial", sans-serif
    font-weight 900
    text-transform uppercase
    font-size 2.1875rem
    color $grey-ec
    text-decoration none

    &:active
      transform translateY(0.0625rem)

  &__nav_closed
    display none

  &__nav_open
    overflow visible
    position absolute
    background-color $grey-44
    border-top 0.0625rem solid $grey-e5
    top 3.75rem
    left 0
    width 100%

  &__nav-items
    list-style none
    padding 0

  &__nav_open &__nav-items
    display flex
    justify-content space-around

  &__nav-item
    display inline-block
    cursor pointer
    padding-right 1.875rem

    @media (max-width 900px)
      padding-right 1.25rem

    @media (max-width 850px)
      padding-right 0.9375rem

    @media (max-width 800px)
      padding-right 0.625rem

    &:last-child
      padding-right 0

  &__nav-link
    font-family "Lato", "Arial", sans-serif
    font-weight 700
    font-size 1.125rem
    color $grey-de
    text-decoration none

    @media (max-width 900px)
      font-size 1rem

    &:hover
      color $white

  &__search
    width 18rem

    @media (max-width 1000px)
      width 15.9375rem

    @media (max-width 950px)
      width 13.125rem

    @media (max-width 800px)
      width 10rem

    @media (max-width 765px)
      flex-grow 1
      margin 0 0.9375rem

  &__profile-photo
    width 2.5rem
    height 2.5rem
    background url("img/profile-photo.jpg")
    background-size cover
    border-radius 50%
    border 0.125rem solid $grey-ec
