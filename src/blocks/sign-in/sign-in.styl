@import "../../colors"

.sign-in
  text-align center
  height 100%
  width 26.25rem
  margin 1.25rem auto
  font-family "Lato", "Arial", sans-serif

  &__page-title
    color $grey-55

  &__logo
    font-weight 900
    font-size 3.4375rem
    color $grey-55
    display block
    text-decoration none
    text-transform uppercase

    &:active
      transform translateY(0.0625rem)

  &__form
    background-color $white
    padding 1.25rem 2.1875rem
    box-shadow 0 0 0.625rem 0 $black-shadow

  &__email
    margin-bottom 1.25rem
    text-align start

  &__label
    font-size 0.875rem

  &__input-field
    height 2.1875rem
    margin 0.3125rem 0

  &__password
    text-align start

  &__forgot-password
    float right
    text-decoration none
    color $blue

    &:visited
      color $blue

  &__button
    display block
    margin 1.25rem 0
    text-align center

  &__no-account
    font-size 0.875rem

  &__sign-up
    color $blue
    text-decoration none

    &:visited
      color $blue
