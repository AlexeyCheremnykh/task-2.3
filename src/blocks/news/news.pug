            li.news__category.news__category-technologies
                a(href="#" class="news__category-link") Technologies
            li.news__category.news__category-entertainment
                a(href="#" class="news__category-link") Entertainment
            li.news__category.news__category-sports
                a(href="#" class="news__category-link") Sports

