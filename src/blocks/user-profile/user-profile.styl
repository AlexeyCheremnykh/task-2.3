@import "../../colors"

.user-profile
  width: 267px
  height: 94px
  display: flex

  @media (max-width: 600px)
    height: auto
    width: 235px

  &__photo
    align-self: flex-start
    height: 84px
    width: 84px
    border-radius: 50%
    border: 4px solid $grey-e5
    margin-right: 12px
    background-size: cover

    @media (max-width: 600px)
      height: 70px
      width: 70px
      vertical-align: middle

  &__info
    align-self: flex-end
    position: relative
    width: 163px
    height: 93px
    border-radius: 8px

    @media (max-width: 600px)
      width: 143px
      height: 80px

    &::before
      position: absolute
      left: -6px
      top: 40px
      content: ""
      display: block
      border-style: solid
      border-width: 6px 6px 6px 0

      @media (max-width: 600px)
        top: 34px

  &__name
    font-family: "Lato", "Arial", sans-serif
    font-weight: 400
    font-size: 18px
    text-align: center
    margin-top: 8px
    word-spacing: -0.05em

    @media (max-width: 600px)
      font-size: 15px

  &__profession
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    font-size: 11px
    text-transform: uppercase
    text-align: center
    margin-top: 1px
    word-spacing: 2px
    letter-spacing: 0.05em

    @media (max-width: 600px)
      font-size: 10px

  &__social-container
    text-align: center

  &__social
    width: 30px
    height: 30px
    display: inline-block
    background-image: url("img/social_icons.png")
    margin-top: 6px
    margin-left: 5px
    margin-right: 5px

    @media (max-width: 600px)
      margin-top: 2px


  &__info_cyan
    background-color: $main-cyan

    &::before
      border-color: transparent $main-cyan transparent transparent

    & ^[0]__name
      color: $white

    & ^[0]__profession
      color: $white

    & ^[0]__social_fb
      background-position: -89px -4px

    & ^[0]__social_twitter
      background-position: -7px -2px

    & ^[0]__social_dribbble
      background-position: -5px -43px

  &__info_grey
    background-color: $grey-e5

    &::before
      border-color: transparent $grey-e5 transparent transparent

    & ^[0]__name
      color: $main-red

    & ^[0]__profession
      color: $grey-4f

    & ^[0]__social_fb
      background-position: -119px -4px

    & ^[0]__social_twitter
      background-position: -52px -2px

    & ^[0]__social_dribbble
      background-position: -46px -43px
