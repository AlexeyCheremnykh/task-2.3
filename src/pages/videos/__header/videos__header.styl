.videos
  &__header
    margin-bottom: 20px
    padding-bottom: 20px
    border-bottom: 1px solid #e5e5e5

  &__search
    display: inline-block
    margin-top: 5px
    width: 300px

    @media (max-width: 750px)
      width: 200px

    @media (max-width: 600px)
      width: 100%

  &__add-video
    display: inline-block
    margin-right: 10px

  &__buttons
    float: right

    @media (max-width: 600px)
      margin-top: 10px
      float: none