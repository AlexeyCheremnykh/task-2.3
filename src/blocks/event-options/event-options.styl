@import "../../colors"

.event-options
  list-style: none
  text-align: start
  padding: 0
  width: 80%

  &__option
    margin-bottom: 30px

  &__event-start
    padding-left: 85px
    position: relative
    display: block
    height: 25px
    line-height: 25px

  &__event-start-picker
    display: block
    position: absolute
    left: 0
    top: 0
    font-size: 16px
    background-color: $grey-e5
    outline-color: $grey-22
    border: none
    color: $grey-66
    border-radius: 4px

  &__add-image-btn
  &__attendees-spinner
    margin-top: 15px
