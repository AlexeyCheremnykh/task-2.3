.sign-in
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center
    height: 100%
    width: 420px
    margin: 0 auto

    &__logo
        font-family: "Lato"
        font-weight: 900
        margin-top: 20px
        font-size: 55px
        color: #555555
        text-decoration: none

        &:active
            transform: translateY(1px)

    &__page-title
        font-family: "Lato"
        color: #555555

    &__form
        background-color: #ffffff
        width: 83%
        padding: 20px 35px
        margin-bottom: 0
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

    &__email
        margin-bottom: 20px
    
    &__field
        box-sizing: border-box
        display: block
        width: 100%
        height: 35px
        border-radius: 4px
        outline: none
        border: 1px solid #bbbbbb
        background-color: #fafafa
        color: #666666
        font-family: "Lato"
        padding: 0 10px
        font-size: 16px
        margin: 5px 0

    &__label
        font-family: "Lato"
        font-size: 14px

    &__forgot-password
        float: right
        text-decoration: none
        color: #1111ff

        &:visited
            color: #1111ff

    &__button
        display: block
        width: 100%
        margin: 20px 0

    &__no-account        
        display: table
        font-family: "Lato"
        font-size: 14px
        margin-left: auto
        margin-right: auto
        margin-bottom: 0

    &__sign-up
        color: #1111ff
        text-decoration: none

        &:visited
            color: #1111ff

@media (max-width: 437px)
    .sign-in
        width: 100%