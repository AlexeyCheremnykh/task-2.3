extends ../layout/layout.pug

include ../stages/stages.pug
include ../location/location.pug
include ../arrow-button/arrow-button.pug
include ../tick-box/tick-box.pug
include ../slider/slider.pug
include ../standard-button/standard-button.pug

block content
    .event-new
        .event-new__stages
            +stages(3)
        .event-new__content
            ul
                li
                    a(href="#stage-map")
                li
                    a(href="#stage-calendar")
                li
                    a(href="#stage-info")
            include __stage-map/event-new__stage-map.pug
            include __stage-calendar/event-new__stage-calendar.pug
            include __stage-info/event-new__stage-info.pug
            .event-new__buttons
                .event-new__button_left
                    +arrow_button("left")
                .event-new__button_right
                    +arrow_button("right")
        +standard_button("big", "blue", "cancel") 