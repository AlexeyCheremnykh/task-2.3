@import "../../colors"

.categories-navigation
  width: 200px

  @media (max-width: 1350px)
    width: 100%

  &__list
    text-align: center
    list-style: none
    margin: 0
    padding: 0

    @media (max-width: 788px)
      display: flex
      flex-wrap: wrap
      width: 300px
      margin-left: auto
      margin-right: auto
      justify-content: center

  &__category
    cursor: pointer
    line-height: 40px

    @media (max-width: 1350px)
      display: inline-block
      margin-left: 15px
      background: none

    &_selected
      background-color: $grey-de

      @media (max-width: 1350px)
        background: none

    &:hover
      background-color: $grey-e5

      @media (max-width: 1350px)
        background: none

  &__link
    text-decoration: none
    display: block
    font-family: "Lato", "Arial", sans-serif
    color: $grey-aa

    &:hover
      @media (max-width: 1350px)
        color: $grey-88

  &__category_selected &__link
    color: $grey-44
