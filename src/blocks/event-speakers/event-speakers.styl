.event-speakers
  &__added-speakers
    padding: 0
    list-style: none
    text-align: start
    height: 285px
    overflow: auto
    background-color: #f5f5f5

  &__speaker
    display: inline-block
    text-align: center
    box-sizing: border-box
    border-bottom: 1px solid #dddddd
    padding: 26px 26px 10px
    width: 50%
    cursor: pointer
    outline: none

    @media (max-width: 760px)
      display: block
      margin: 0 auto
      width: 100%

    &:nth-child(2n - 1)
      border-right: 1px solid #dddddd

    @media (max-width: 760px)
      display: block
      border: none

    &:focus
      background-color: #cccccc

  &__profile
    display: inline-block

  &__speaker-info
    margin: 0

  &__info-name
    margin: 19px 0
    font-family: "Lato", "Arial", sans-serif
    display: inline-block
    margin-right: 5px
    font-weight: 700

  &__info-value
    display: inline-block
    margin-right: 15px

  &__buttons
    margin-top: 10px
    text-align: start

  &__add-speaker
    vertical-align: bottom
    display: inline-block
    margin-right: 15px