.standard-button
  outline: none
  border-radius: 3px
  background-color: #ffffff
  text-transform: uppercase
  font-family: "Lato", "Arial", sans-serif
  font-weight: 900
  letter-spacing: 0.05em
  cursor: pointer

  &_size_big
    width: 118px
    height: 32px
    font-size: 12px

  &_size_small
    width: 78px
    height: 22px
    font-size: 10px

  &_color_red
    color: #e34a26
    border: 1px solid #e75735
    &:hover
      background-color: #e75735
    &:focus
      border: 2px solid #bf3e1f

  &_color_red&_size_big
    box-shadow: 0 3px 0 0 #e75735
    &:hover
      box-shadow: 0 3px 0 0 #bf3e1f

  &_color_red&_size_small
    box-shadow: 0 2px 0 0 #e75735
    &:hover
      box-shadow: 0 2px 0 0 #bf3e1f

  &_color_blue
    color: #44ae9f
    border: 1px solid #4eb7a8
    &:hover
      background-color: #4eb7a8
    &:focus
      border: 2px solid #28a290

  &_color_blue&_size_big
    box-shadow: 0 3px 0 0 #4eb7a8
    &:hover
      box-shadow: 0 3px 0 0 #28a290

  &_color_blue&_size_small
    box-shadow: 0 2px 0 0 #4eb7a8
    &:hover
      box-shadow: 0 2px 0 0 #28a290

  &_color_blue&_filled
    background-color: #4eb7a8
    color: #ffffff

    &:hover
      background-color: #429e91

  &_color_blue&_filled&_size_big
    box-shadow: 0 3px 0 0 #28a290
    &:hover
      box-shadow: 0 3px 0 0 #34877b
    &:active
      box-shadow: none

  &_color_blue&_shadow_dark&_size_big
    box-shadow: 0 3px 0 0 #379285
    &:hover
      background-color: #28a290

  &_thin
    width: 128px
    height: 22px
    border: none
    font-size: 10px
    word-spacing: 0.2em

  &_long
    width: 243px
    height: 32px

  &:hover
    border: none
    color: #ffffff

  &:active&_size_big
    transform: translateY(3px)
    box-shadow: none

  &:active&_size_small
    transform: translateY(2px)
    box-shadow: none