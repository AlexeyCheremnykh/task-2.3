.calendar
    width: 279px

    &__day
        width: 279px
        height: 109px
        font-family: "Lato"
        font-weight: 300 
        font-size: 80px
        text-align: center
        color: #ffffff
        line-height: 110px
        letter-spacing: -0.04em
        background-color: #e75735
        border-radius: 4px 4px 0 0

    &__datepicker     
        .ui-datepicker
            box-sizing: border-box
            width: 279px            
            padding: 0
            border: none

            .ui-datepicker-header
                padding: 0
                border: none
                border-radius: 0
                height: 43px
                background-color: #d54c2c
                color: #ffffff
                font-family: "Lato"
                font-weight: 300
                font-size: 24px
                letter-spacing: -0.03em

                .ui-datepicker-year
                    display: none
                
                .ui-datepicker-title
                    line-height: 1.6em
    
                .ui-icon
                    background-image: none
                    width: 9px
                    height: 9px
                    border-left: 2px solid #ffffff
                    border-bottom: 2px solid #ffffff                
            
                .ui-icon-circle-triangle-e
                    transform: rotate(-135deg)
                    margin-left: -6px

                .ui-icon-circle-triangle-w
                    transform: rotate(45deg)
                    margin-left: -7px

                .ui-datepicker-next.ui-state-hover,
                .ui-datepicker-prev.ui-state-hover
                    background-color: #d54c2c                    
                    border: none
                    top: 0
                    border-radius: 0

                    & > .ui-icon
                        top: 24px
                    

            .ui-datepicker-calendar
                margin: 0                
                width: 279px
                
                th
                    width: 40px
                    height: 27px
                    padding: 0
                    font-family: "Lato"
                    font-weight: 900
                    font-size: 9px
                    letter-spacing: 0.05em
                    color: #ffffff
                    background-color: #e75735

                    &:last-child
                        width: 39px
                
                td                                     
                    width: 39px
                    height: 39px
                    border-right: 1px solid #ffffff                    
                    padding: 0

                    &:last-child
                        border-right: none        

                    .ui-state-default
                        font-family: "Source Sans Pro"                    
                        font-size: 20px                    
                        line-height: 39px 
                        font-weight: 400
                        background-color: #f2f2f2
                        border: none
                        padding: 0                        
                        width: 39px
                        height: 39px
                        color: #868686
                        text-align: center

                    .ui-state-active
                        background-color: #e75735
                        color: #ffffff

                .ui-datepicker-other-month
                    background-color: #f2f2f2
                    opacity: 1
                    
                    .ui-state-default
                        color: #ffffff
                
                tr
                    border-bottom: 1px solid #ffffff 

    &__today
        box-sizing: border-box
        width: 100%
        height: 49px
        background-color: #e5e5e5
        border-radius: 0 0 4px 4px
        font-family: "Lato"
        font-weight: 900
        font-size: 13px
        letter-spacing: 0.05em
        line-height: 49px
        text-transform: uppercase
        color: #868686
        padding-left: 20px
        text-align: left
        outline: none
        border: none
        cursor: pointer
    
              
