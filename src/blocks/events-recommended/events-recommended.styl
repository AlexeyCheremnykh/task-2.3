.events-recommended
  float: right

  @media (max-width: 1085px)
    float: none
    margin-top: 20px

  @media (max-width: 705px)
    width: 62%
    margin: 20px auto 0

  &__event
    margin-bottom: 15px

    @media (max-width: 1085px)
      display: inline-block

    @media (max-width: 705px)
      width: 100%

    &:first-of-type
      @media (max-width: 1085px)
        margin-right: 17px

      @media (max-width: 705px)
        margin-right: 0

  &__see-more
    text-decoration: none
    font-family: "Lato", "Arial", sans-serif
    color: #4ab7a8
    text-transform: uppercase
    font-weight: 700

    &:hover
      color: #4a9aaf