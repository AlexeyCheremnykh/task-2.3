.articles
  width: 1160px
  margin-left: auto
  margin-right: auto

  @media (max-width: 1220px)
    width: 95%

  @media (max-width: 900px)
    width: 80%

  &__search-filter
    float: right

    @media (max-width: 900px)
      float: none
      width: 100%

  &::after
    display: block
    content: ""
    clear: both

@media (max-width: 1220px)


        .search
            display: flex
            justify-content: flex-end
            width: 100%

            &__field
                padding-right: 33px
                flex-grow: 1
                border-radius: 0 3px 3px 0

        &__filter
            &-author-field
                width: 100%
            &-tags
                .select2-container
                    width: 100% !important
                    .selection
                        .select2-selection
                            width: 100%

        &__slider-wrapper
            padding-left: 5.208%
            .slider
                width: 100%

@media (max-width: 725px)
    .articles
        display: block

        &__left
            width: 100%
            display: flex
            flex-direction: column
            align-content: space-between
            max-height: 415px
            flex-wrap: wrap

        &__categories
            position: static
            box-sizing: border-box
            width: 49.6%
            margin: 0

        &__filter
            width: 49.6%
            box-sizing: border-box

        &__search
            box-sizing: border-box
            order: 1
            margin-top: 4px
            margin-bottom: 0
            width: 49.6%

        &__popular
            box-sizing: border-box
            width: 100%

        &__category
            line-height: 33px

@media(max-width: 500px)
    .articles
        &__left
            display: block
            max-height: none

        &__filter, &__search, &__categories
            width: 350px
            margin-bottom: 30px
            margin-left: auto
            margin-right: auto

        &__category
            line-height: 40px

@media(max-width: 450px)
    .articles
        &__popular
            padding: 20px 15px

        &__article-footer
            .user-profile
                &__info
                    height: 73px
                    width: 143px

                    &::before
                        top: 30px

                &__photo
                    height: 65px
                    width: 65px

                &__name
                    font-size: 16px
                    margin-top: 4px

                &__profession
                    font-size: 10px

                &__social-icon
                    margin-top: 0

            .percentage
                margin-left: 8px
                canvas
                    width: 75px
                    height: 75px

                &__value
                    top: 17px
                    font-size: 33px
                    width: 75px