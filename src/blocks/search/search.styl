@import "../../colors"

.search
  &__field
    box-sizing: border-box
    outline: none
    border: none
    height: 1.75rem
    width: calc(100% - 2.0625rem)
    background-color: $grey-e5
    border-radius: 0.1875rem 0 0 0.1875rem
    padding-left: 0.8125rem
    padding-bottom: 0.25rem
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-size: 0.875rem
    letter-spacing: 0.01em
    color: $grey-66

    &:focus
      border: 0.125rem solid $grey-88
      padding-left: 0.6875rem

    &::placeholder
      color: $grey-88

    &_not-found
      background-color: $main-red

      &::placeholder
        color: $white

  &__button
    vertical-align: top
    outline: none
    border: none
    height: 1.75rem
    width: 2.0625rem
    border-radius: 0 0.1875rem 0.1875rem 0
    color: $white
    cursor: pointer
    font-size: 0.8125rem

    &_color_red
      background-color: $main-red
      &:hover,
      &:focus
        background-color: $dark-red

    &_color_grey
      background-color: $grey-9d
      &:hover,
      &:focus
        background-color: $grey-88
