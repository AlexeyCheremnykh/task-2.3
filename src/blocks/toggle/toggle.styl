.toggle
  cursor: pointer
  position: relative
  display: block
  padding-left: 64px
  line-height: 24px
  height: 24px
  font-family: "Lato", "Arial", sans-serif
  font-size: 15px
  font-weight: 400

  &_not-labeled
    padding-left: 59px

  &__auxiliary-checkbox
    display: none

  &__switch
    position: absolute
    top: 0
    left: 0
    background-color: #e5e5e5
    width: 59px
    height: 24px
    border-radius: 12px

    &::before
      position: absolute
      display: block
      color: #ffffff
      font-family: "Lato", "Arial", sans-serif
      font-weight: 900
      font-size: 12px
      letter-spacing: 0.05em
      content: "off"
      text-transform: uppercase
      left: 26px

    &::after
      position: absolute
      content: ""
      display: block
      top: 3px
      left: 3px
      width: 18px
      height: 18px
      border-radius: 50%
      background-color: #ffffff

  &__auxiliary-checkbox:checked + &__switch
    background-color: #4eb7a8

    &::before
      content: "on"
      text-transform: uppercase
      left: auto
      right: 28px

    &::after
      left: auto
      right: 3px
