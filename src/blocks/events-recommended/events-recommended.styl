.events-recommended
  float: right

  @media (max-width: 1085px)
    float: none
    margin-top: 20px

  @media (max-width: 705px)
    box-sizing: border-box
    width: 100%
    margin: 20px auto 0

  &__events
    @media (max-width: 1085px)
      display: flex
      justify-content: space-between

  &__event
    margin-bottom: 15px

    @media (max-width: 705px)
      width: 48.563%

  &__see-more
    text-decoration: none
    font-family: "Lato", "Arial", sans-serif
    color: #4ab7a8
    text-transform: uppercase
    font-weight: 700

    &:hover
      color: #4a9aaf