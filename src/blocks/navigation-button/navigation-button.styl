@import "../../colors"

.navigation-button__inner
  font-family "Lato", "Arial", sans-serif
  font-size 1.625rem
  font-weight 900
  height 8em
  width 8em
  background-color $white
  border none
  outline none
  color $grey-88
  text-transform uppercase
  box-shadow 0 0 0.4em 0 $black-shadow
  transition transform .2s ease-in-out
  cursor pointer

  &:hover
    transform scale(1.1)

  &:focus
    background-color $grey-ec
