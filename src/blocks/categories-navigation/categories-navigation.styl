.categories-navigation
  width: 200px

  &__list
    text-align: center
    list-style: none
    margin: 0
    padding: 0

  &__category
    cursor: pointer
    display: block
    line-height: 40px

    &_selected
      background-color: #dddddd

    &:hover
      background-color: #eeeeee

  &__link
    text-decoration: none
    display: block
    font-family: "Lato", "Arial", sans-serif
    color: #aaaaaa

  &__category_selected &__link
    color: #444444
