@import "../../../colors"

.home__navigation-button
  height: 200px
  width: 200px
  background-color: $white
  border: none
  outline: none
  font-family: "Lato", "Arial", sans-serif
  font-size: 26px
  font-weight: 900
  color: $grey-88
  text-transform: uppercase
  box-shadow: 0 0 10px 0px $black-shadow
  transition: transform .2s ease-in-out
  cursor: pointer

  &:hover
    transform: scale(1.1)

  &:focus
    background-color: $grey-ec

  &-wrapper
    margin-right: 15px

    &:last-child
      margin-right: 0

    @media (max-width: 1290px)
      margin-bottom: 7.5px
      margin-top: 7.5px

      &:nth-child(3)
        margin-right: 0

    @media (max-width: 646px)
      margin-right: 15px

      &:nth-child(3)
        margin-right: 15px

      &:nth-child(2n)
        margin-right: 0

    @media (max-width: 448px)
      &:nth-child(2n - 1)
        margin-right: 0
