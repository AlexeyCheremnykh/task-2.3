@import "../../colors"

.standard-button
  outline: none
  border-radius: 3px
  background-color: $white
  text-transform: uppercase
  font-family: "Lato", "Arial", sans-serif
  font-weight: 900
  letter-spacing: 0.05em
  cursor: pointer

  &_size_big
    width: 118px
    height: 32px
    font-size: 12px

  &_size_small
    width: 78px
    height: 22px
    font-size: 10px

  &_color_red
    color: $light-red
    border: 1px solid $main-red
    &:hover
      background-color: $main-red
    &:focus
      border: 2px solid $dark-red

  &_color_red&_size_big
    box-shadow: 0 3px 0 0 $main-red
    &:hover
      box-shadow: 0 3px 0 0 $dark-red

  &_color_red&_size_small
    box-shadow: 0 2px 0 0 $main-red
    &:hover
      box-shadow: 0 2px 0 0 $dark-red

  &_color_cyan
    color: $cyan
    border: 1px solid $main-cyan
    &:hover
      background-color: $main-cyan
    &:focus
      border: 2px solid $dark-cyan

  &_color_cyan&_size_big
    box-shadow: 0 3px 0 0 $main-cyan
    &:hover
      box-shadow: 0 3px 0 0 $dark-cyan

  &_color_cyan&_size_small
    box-shadow: 0 2px 0 0 $main-cyan
    &:hover
      box-shadow: 0 2px 0 0 $dark-cyan

  &_color_cyan&_filled
    background-color: $main-cyan
    color: $white
    &:hover
      background-color: $cyan

  &_color_cyan&_filled&_size_big
    box-shadow: 0 3px 0 0 $dark-cyan
    &:hover
      box-shadow: 0 3px 0 0 $darkest-cyan
    &:active
      box-shadow: none

  &_color_cyan&_shadow_dark&_size_big
    box-shadow: 0 3px 0 0 $darkest-cyan
    &:hover
      background-color: $dark-cyan

  &_thin
    width: 128px
    height: 22px
    border: none
    font-size: 10px
    word-spacing: 0.2em

  &_long
    width: 243px
    height: 32px

  &:hover
    border: none
    color: $white

  &:active&_size_big
    transform: translateY(3px)
    box-shadow: none

  &:active&_size_small
    transform: translateY(2px)
    box-shadow: none
