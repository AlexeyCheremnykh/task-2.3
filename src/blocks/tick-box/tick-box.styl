@import "../../colors"

.tick-box
  cursor: pointer
  display: block
  padding-left: 28px
  height: 23px
  line-height: 23px
  position: relative
  font-size: 15px
  font-family: "Lato", "Arial", sans-serif
  font-weight: 400

  &_not-labeled
    padding-left: 23px

  &__auxiliary-checkbox
    display: none

  &__checkmark
    position: absolute
    left: 0
    top: 0
    width: 23px
    height: 23px
    background-color: $grey-e5

    &::after
      position: absolute
      content: ""
      display: block
      width: 9px
      height: 4px
      transform: rotate(-45deg)
      top: 7px
      right: 6px
      border-left: 2px solid $grey-ce
      border-bottom: 2px solid $grey-ce

  &__auxiliary-checkbox:checked + &__checkmark
    background-color: $main-cyan

    &::after
      border-left: 2px solid $white
      border-bottom: 2px solid $white

  &_shape_round &__checkmark
    border-radius: 50%

  &_shape_square &__checkmark
    border-radius: 5px
