.tick-box
    display: inline-block
    height: 23px    

    input
        display: none

    &__container
        cursor: pointer
        user-select: none
        position: relative
        font-size: 17px
        padding-right: 27px
        font-family: "Lato"  
    
    &__checkmark              
        position: absolute
        top: 0
        right: 0
        width: 23px
        height: 23px        
        border-radius: 50%
        background-color: #e5e5e5
            
        &::after
            position: absolute
            content: ""
            display: block
            width: 9px
            height: 4px
            transform: rotate(-45deg)
            top: 7px
            right: 6px
            border-left: 2px solid #cecece
            border-bottom: 2px solid #cecece     
    
    input:checked ~ &__checkmark
        background-color: #4eb7a8
            
        &::after
            top: 7px
            right: 6px
            border-left: 2px solid #ffffff
            border-bottom: 2px solid #ffffff

            
        

