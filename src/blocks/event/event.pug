include ../standard-button/standard-button.pug

mixin event(day, month, title, text)
    .event
        .event__image
        .event__text
            .event__date
                .event__day #{day}
                .event__month #{month}
            a(href="#" class="event__title") #{title}
            .event__content #{text}
            +standard_button("big", "blue", "add to calendar")
