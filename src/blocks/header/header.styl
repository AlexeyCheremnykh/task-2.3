.page-header
    box-sizing: border-box
    width: 100%
    height: 60px
    background-color: #e75735
    position: fixed
    top: 0
    z-index: 2

    &__content
        margin: 0 auto
        width: 976px
        height: 100%
        display: flex
        justify-content: space-around
        align-items: center

    &__logo
        font-family: "Lato"
        font-weight: 900
        text-transform: uppercase
        font-size: 35px
        color: #9c520a

    &__nav-items
        list-style: none
        padding: 0

    &__nav-item
        display: inline-block
        cursor: pointer       
        padding-right: 20px     

    &__nav-link
        font-family: "Lato"
        font-weight: 400
        font-size: 15px
        color: #fdeaa8
        text-transform: uppercase
        text-decoration: none

        &:hover
            color: #e5c65c     

    &__profile-photo
        width: 40px
        height: 40px
        background: url("img/profile-photo.png")
        background-size: cover
        border-radius: 50%
        border: 2px solid #ececec

    &__profile-menu
            display: none
            overflow: hidden            
            width: 140px
            height: 90px
            list-style: none
            position: absolute
            right: 90px
            top: 50px            
            border-radius: 4px
            box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.3)
            padding: 0
            font-family: "Lato"
            font-weight: 400
            color: #888888        

            &-item                
                display: block
                height: 30px
                line-height: 30px 
                text-align: center                
                background-color: #f0f0f0                

                &:hover
                    background-color: #e5e5e5

    .search
        &__button
            background-color: #a52a2a

            &:hover
                background-color: #8e2525

@media (max-width: 1024px)
    .page-header
        .search
            width: 250px