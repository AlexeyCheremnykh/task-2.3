include ../section-title/section-title.pug

mixin horizontal-preview-section({title, address, mixClass = ""})
    - mixClass = mixClass ? " " + mixClass : "";
    section(class="horizontal-preview-section" + mixClass)
        +section-title(title, address)
        .horizontal-preview-section__content
            block
        .horizontal-preview-section__button-wrapper.horizontal-preview-section__button-wrapper_left
            +arrow_button("left")
        .horizontal-preview-section__button-wrapper.horizontal-preview-section__button-wrapper_right
            +arrow_button("right")