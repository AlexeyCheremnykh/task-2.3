.percentage
  position: relative
  height: 95px

  &__value
    cursor: default
    position: absolute
    top: 0
    line-height: 95px
    width: 95px
    text-align: center
    font-size: 40px
    color: #9d9d9d
    font-family: "Lato", "Arial", sans-serif
    font-weight: 300
    letter-spacing: -2px

    @media (max-width: 600px)
      width: 75px
      line-height: 75px
      font-size: 35px

  canvas
    @media (max-width: 600px)
      height: 75px
      width: 75px