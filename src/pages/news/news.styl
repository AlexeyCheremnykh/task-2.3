.news
  margin: 0 auto
  width: 1290px

  @media (max-width: 1350px)
    width: 1050px

  @media (max-width: 1090px)
    width: 100%

  &__categories-navigation
    position: fixed
    float: left

    @media (max-width: 1350px)
      position: static
      margin-bottom: 10px

    @media (max-width: 1090px)
      float: none

  &__categories-preview
    float: right

    @media (max-width: 1090px)
      float: none
      width: 100%

  &__preview
    margin: 0 auto 30px

  &::after
    display: block
    content: ""
    clear: both