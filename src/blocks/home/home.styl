.home
  width 100%
  min-height 100vh
  display flex
  align-items center
  justify-content center

  &__navigation
    display flex
    justify-content center
    flex-wrap wrap
    padding 0.3125rem 0

    @media (max-width 1290px)
      width 39.375rem

    @media (max-width 448px)
      width 12.5rem

  &__navigation-button
    margin-right 0.625rem

    @media (max-width 1290px)
      margin-bottom 0.3125rem
      margin-top 0.3215rem

    @media (max-width 448px)
      margin-right 0

    &:nth-child(2n)
      @media (max-width 1290px)
        margin-right 0

    &:last-child
      margin-right 0
