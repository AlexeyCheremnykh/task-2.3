.event-speakers
  &__added-speakers
    padding: 0
    list-style: none
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    height: 265px
    overflow: auto
    background-color: #f5f5f5

  &__speaker
    display: inline-block
    box-sizing: border-box
    border-bottom: 1px solid #dddddd
    padding: 26px 26px 10px
    width: 50%
    cursor: pointer
    outline: none

    &:nth-child(2n - 1)
      border-right: 1px solid #dddddd

    &:focus
      background-color: #cccccc

  &__speaker-info
    margin: 0

  &__topic,
  &__start
    margin: 19px 0
    font-family: "Lato", "Arial", sans-serif
    display: inline-block
    margin-right: 5px
    font-weight: 700

  &__topic-title,
  &__start-time
    display: inline-block
    margin-right: 15px

  &__buttons
    margin-top: 10px

  &__add-speaker
    vertical-align: bottom
    display: inline-block
    margin-right: 15px