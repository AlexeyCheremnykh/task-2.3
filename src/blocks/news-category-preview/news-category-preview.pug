include ../section-title/section-title.pug
include ../arrow-button/arrow-button.pug
include ../news-article-preview/news-article-preview.pug

mixin news-category-preview({categoryTitle, categoryAddress = "/mock-address/", articles = []})
    section.news-category-preview
        +section-title(categoryTitle, categoryAddress)
        .news-category-preview__content
            - for (let article of articles)
                .news-category-preview__article-preview
                    +news-article-preview(article)
        .news-category-preview__scroll-btn.news-category-preview__scroll-btn_left
            +arrow-button({direction: "left"})
        .news-category-preview__scroll-btn.news-category-preview__scroll-btn_right
            +arrow-button({direction: "right"})