.event
    width: 288px
    height: 212px
    border-radius: 3px
    overflow: hidden

    &__image
        width: 95px
        height: 212px
        display: inline-block
        vertical-align: top
        background-image: url("img/event-sample.png")
    
     &__text
        box-sizing: border-box      
        width: 193px
        height: 212px
        padding-left: 19px 
        padding-top: 4px
        display: inline-block
        vertical-align: top
        background-color: #4eb7a8
        color: #ffffff

        .standard-button
            width: 128px
            height: 22px
            border: none
            font-size: 10px
            box-shadow: 0 3px 0 0 #379285
            margin-left: 13px
            word-spacing: 0.2em          
    
    &__date
        font-family: "Lato"
        font-weight: 300        
        word-spacing: 14px
        margin-bottom: 8px     

    &__day
        font-size: 73px
        letter-spacing: -0.04em
        display: inline-block
        margin-right: 14px

    &__month
        font-size: 30px
        display: inline-block

    &__title
        font-family: "Lato"
        font-weight: 900
        font-size: 12.5px
        text-decoration: none
        color: #ffffff
        margin-bottom: 3px
        letter-spacing: 0.05em
        text-transform: uppercase

    &__content
        font-family: "Lato"
        font-weight: 400
        font-size: 11px
        letter-spacing: 0.05em
        margin-bottom: 19px