.arrow-button
  outline: none
  position: relative
  width: 50px
  height: 50px
  border-radius: 50%
  border: 3px solid #4eb7a8
  background-color: #ffffff
  cursor: pointer

  &_long
    height: 100%
    border-radius: 0

  &_right::after
    transform: translateY(-50%) rotate(45deg)
    right: 16px

  &_left::after
    transform: translateY(-50%) rotate(-135deg)
    left: 16px

  &:hover
    background-color: #4eb7a8

    &::after
      border-color: #ffffff
      background-color: #4eb7a8

  &:disabled
    background-color: #e5e5e5
    border-color: #e5e5e5
    cursor: default

    &::after
      border-color: #ffffff
      background-color: #e5e5e5

  &:focus
    outline: 2px solid #e5e5e5

  &::after
    content: ""
    position: absolute
    top: 50%
    width: 13px
    height: 13px
    border-top: 4px solid #4eb7a8
    border-right: 4px solid #4eb7a8
