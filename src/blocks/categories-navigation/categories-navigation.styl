.categories-navigation
  width: 200px

  &__list
    text-align: center
    list-style: none
    margin: 0
    padding: 0

  &__category
    cursor: pointer
    line-height: 40px

    &_selected
      background-color: #dddddd

    &:hover
      background-color: #eeeeee

  &__link
    text-decoration: none
    display: block
    font-family: "Lato", "Arial", sans-serif
    color: #aaaaaa

  &__category_selected &__link
    color: #444444

.categories-navigation
    @media (max-width: 1350px)
      width: 100%

    &__list
      @media (max-width: 788px)
        display: flex
        flex-wrap: wrap
        width: 300px
        margin-left: auto
        margin-right: auto
        justify-content: center

    &__category
      @media (max-width: 1350px)
        display: inline-block
        margin-left: 15px
        background: none

      &_selected
        @media (max-width: 1350px)
          background: none

      &:hover
        @media (max-width: 1350px)
          background: none

        & .categories-navigation__link
          @media (max-width: 1350px)
            color: #888888
