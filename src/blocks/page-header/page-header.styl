@import "../../colors"

.page-header
  box-sizing: border-box
  width: 100%
  height: 60px
  background-color: $grey-44
  box-shadow: 0 0 2px 0 $black-shadow
  position: fixed
  top: 0
  z-index: 1

  &__content
    width: 1040px
    height: 100%
    margin: 0 auto
    display: flex
    justify-content: space-between
    align-items: center

    @media (max-width: 1110px)
      width: 95.151%

    @media (max-width: 765px)
      justify-content: flex-start

  &__menu-icon
    display: none
    cursor: pointer

    @media (max-width: 765px)
      margin-right: 10px
      display: block

  &__menu-bar
    width: 20px
    height: 2px
    background-color: $grey-de
    margin: 4px 0

  &__logo
    font-family: "Lato", "Arial", sans-serif
    font-weight: 900
    text-transform: uppercase
    font-size: 35px
    color: $grey-ec
    text-decoration: none

    &:active
      transform: translateY(1px)

  &__nav_closed
    display: none

  &__nav_open
    overflow: visible
    position: absolute
    background-color: $grey-44
    border-top: 1px solid $grey-e5
    top: 60px
    left: 0
    width: 100%

  &__nav-items
    list-style: none
    padding: 0

  &__nav_open &__nav-items
    display: flex
    justify-content: space-around

  &__nav-item
    display: inline-block
    cursor: pointer
    padding-right: 30px

    @media (max-width: 900px)
      padding-right: 20px

    @media (max-width: 850px)
      padding-right: 15px

    @media (max-width: 800px)
      padding-right: 10px

    &:last-child
      padding-right: 0

  &__nav-link
    font-family: "Lato", "Arial", sans-serif
    font-weight: 700
    font-size: 18px
    color: $grey-de
    text-decoration: none

    @media (max-width: 900px)
      font-size: 16px

    &:hover
      color: $white

  &__search
    width: 288px

    @media (max-width: 1000px)
      width: 255px

    @media (max-width: 950px)
      width: 210px

    @media (max-width: 800px)
      width: 160px

    @media (max-width: 765px)
      flex-grow: 1
      margin: 0 15px

  &__profile-photo
    width: 40px
    height: 40px
    background: url("img/profile-photo.jpg")
    background-size: cover
    border-radius: 50%
    border: 2px solid $grey-ec
