.event-new-wrapper
    text-align: center

.event-new
    display: inline-block
    min-width: 510px
    margin-left: auto
    margin-right: auto

    &__main-title
        font-family: "Lato"
        margin-top: 0
        color: #555555

    &__stages
        width: 100%
        text-align: center
        margin-bottom: 15px
        pointer-events: none

        .stages
            width: 100%

    &__content
        border: none !important
        border-radius: 5px
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)
        
        .ui-tabs-nav 
            display: none
        
        .ui-tabs-panel
            padding-bottom: 20px
            padding-top: 10px

    &__stage-title
        font-family: "Lato"
        text-align: center
        color: #555555      
         
    &__button_left
        display: inline-block        

    &__button_right
        display: inline-block
        margin-left: 30px
    
    &__buttons
        text-align: center
        padding-bottom: 15px
    
    &__exit-buttons
        margin-top: 10px
        display: flex
        justify-content: space-between       

@import "__place/event-new__place.styl"        
@import "__date/event-new__date.styl"
@import "__title-description/event-new__title-description.styl"
@import "__options/event-new__options.styl"