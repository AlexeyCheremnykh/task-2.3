.news
    margin-left: auto
    margin-right: auto
    width: 95%

    &::after
        display: block
        content: ""
        clear: both

    &__categories
        position: fixed
        padding: 0
        margin: 0
        float: left
        list-style: none        
        width: 200px
        height: 290px
        text-align: center       

    &__category
        cursor: pointer
        display: block
        line-height: 40px        

        &-link
            text-decoration: none
            font-family: "Lato"
            color: #aaaaaa

        &_selected
            background-color: #dddddd

            & > a 
                color: #444444
        
        &:hover
            background-color: #eeeeee

    &__news-block
        float: right

    &__container-category-wrapper
        width: 890px
        margin-left: 80px
        padding-bottom: 2px
        border-bottom: 2px solid #e5e5e5
    
    &__container-category
        text-decoration: none
        font-family: "Lato"
        font-weight: 900
        text-transform: uppercase
        color: #aaaaaa
        font-size: 20px

        &:hover
            color: #888888
  
    &__news-container
        box-sizing: border-box      
        position: relative
        margin-left: auto
        margin-right: auto
        margin-bottom: 30px
        width: 1050px
        height: 300px
        padding-top: 20px
        padding-bottom: 0
        background-color: #ffffff
        border-radius: 5px
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

    &__button-wrapper
        position: absolute
        top: 131px

        &_right
            right: 20px

        &_left
            left: 20px         
 
    &__news-items
        margin: 10px auto
        width: 890px  
        display: flex
        justify-content: space-between

        .news
            flex-shrink: 0

@media (max-width: 1350px)
    .news
        width: 1050px
        margin-left: auto
        margin-right: auto
        
        &__categories
            position: static
            width: 1050px
            height: 50px
        
        &__category
            display: inline-block
            margin-left: 15px
            background: none

            &:hover 
                background: none
                & .news__category-link                
                    color: #888888
        
        &__news-block
            margin-left: auto
            margin-right: auto

@media (max-width: 1067px)
    .news
        width: 100%

        &__news-block, &__categories
            float: none
            width: 100%
        
        &__container-category-wrapper
            width: 600px
            margin-left: auto
            margin-right: auto

        &__news-items
            width: 600px    

        &__news-container
            width: 770px
            .news-item:last-child
                display: none

@media (max-width: 788px)
    .news
        &__news-items, &__container-category-wrapper
            width: 288px  
        
        &__news-container
            width: 460px
            .news-item:first-child
                display: none
        
        &__categories
            display: flex            
            flex-wrap: wrap
            height: 85px 
            width: 300px
            margin-left: auto
            margin-right: auto
            justify-content: center

@media (max-width: 480px)
    .news
        &__news-container
            height: 350px
            width: 320px
        
        &__button-wrapper
            top: auto
            bottom: 20px

            &_left
                left: 100px
            &_right
                right: 100px
