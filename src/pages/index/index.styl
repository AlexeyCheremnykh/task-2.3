@import "__navigation-button/home__navigation-button.styl"

html
  background-color: #f5f5f5
  color: #888888
  font-size: 16px
  font-family: "Lato", "Arial", sans-serif

.home
  width: 100%
  min-height: 100vh
  display: flex
  align-items: center
  justify-content: center

  &__navigation
    display: flex
    justify-content: center
    flex-wrap: wrap

    @media (max-width: 1290px)
      width: 630px

    @media (max-width: 448px)
      width: 200px
