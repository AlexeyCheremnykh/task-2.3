include ../page-section/page-section.pug
include ../toggle/toggle.pug
include ../location/location.pug
include ../search/search.pug
include ../event/event.pug
include ../arrow-button/arrow-button.pug

mixin events-my-events()
    +page-section("My events", "events-my-events")
        +search({placeholder: "Event search", mixClass: "events-my-events__search"})
        .events-my-events__map
            +toggle({enabled: true, label: "Events map", mixClass: "events-my-events__map-toggle"})
            +location({localAddress: "Lenina Street 14", globalAddress: "Tomsk, Russia", title: "My events", mixClass: "events-my-events__location"})
        .events-my-events__events
            - for (i = 0; i < 6; i++)
                +event({dateString: "2018-05-15", added: true, title: "Title", mixClass: "events-my-events__event", content: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.Pellentesque eros quam, ullamcorper sed sem quis, cursus scelerisque elit."})
        .events-my-events__next-prev-buttons
            +arrow-button({direction: "left", disabled: true, mixClass: "events-my-events__prev-button"})
            +arrow-button({direction: "right"})
