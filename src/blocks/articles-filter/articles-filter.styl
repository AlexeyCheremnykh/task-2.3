.articles-filter
  width: 288px

  &__option-title
    font-family: "Lato", "Arial", sans-serif
    font-size: 17px
    color: #444444
    margin: 25px 0 15px

  &__author-field
    box-sizing: border-box
    border: none
    width: 100%
    height: 28px
    background-color: #e5e5e5
    padding-left: 13px
    padding-right: 5px
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-size: 14px
    color: #666666

    &:focus
      outline: 2px solid #888888

  &__show-btn
    margin-top: 20px