include ../standard-button/standard-button.pug

mixin event({dateString = "2006-06-06", title = "No title", content = "No content", image = "img/event-sample.jpg", added = false} = {})
    - const eventDate = new Date(dateString);
    - const eventMonth = eventDate.toLocaleString("en", { month: "short" });
    - const eventDay = eventDate.toLocaleString("en", { day: "numeric" });
    article(class = added ? "event event_added" : "event")
        .event__image(style=`background-image: url(${image})`)
        .event__main
            header.event__header
                time.event__date(date=dateString)
                    span.event__day=eventDay
                    span.event__month=eventMonth
                h2.event__title=title
            p.event__content=content
            .event__add-btn
                +standard-button({size: "big", color: "cyan", label: "add to calendar", darkShadow: true, thin: true})
