@import "../../colors"

.articles-filter
  margin-bottom: 25px
  position: -webkit-sticky
  position: sticky
  top: 70px

  &__options
    list-style: none
    padding: 0

    @media (max-width: 910px)
      display: flex
      justify-content: space-between
      flex-wrap: wrap

  &__option
    margin-bottom: 20px

    @media (max-width: 910px)
      width: 47%

  &__option-title
    font-family: "Lato", "Arial", sans-serif
    font-size: 15px
    color: $grey-44
    margin-bottom: 15px

  &__author-field
    box-sizing: border-box
    border: none
    width: 100%
    height: 28px
    background-color: $grey-e5
    padding-left: 13px
    padding-right: 5px
    font-family: "Source Sans Pro", "Arial", sans-serif
    font-size: 14px
    color: $grey-66

    &:focus
      outline: 2px solid $grey-88
