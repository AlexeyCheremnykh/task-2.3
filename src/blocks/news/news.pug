include ../categories-navigation/categories-navigation.pug
include ../news-category-preview/news-category-preview.pug

main.news
    - const newsCategories = {
    -   "All news": "/mock-address/",
    -   World: "/mock-address/",
    -   Russia: "/mock-address/",
    -   Business: "/mock-address/",
    -   Technologies: "/mock-address/",
    -   Entertainment: "/mock-address/",
    -   Sports: "/mock-address/",
    - };
    .news__categories-navigation
        +categories-navigation({categories: newsCategories, selectedCategory: "All news"})
    - const newsArticles = JSON.parse(fs.readFileSync("src/blocks/news/block-data/news-articles.json", "utf8"));
    .news__categories-preview
        +news-category-preview({categoryTitle: "World", articles: newsArticles})
        +news-category-preview({categoryTitle: "Russia", articles: newsArticles})
        +news-category-preview({categoryTitle: "Business", articles: newsArticles})
        +news-category-preview({categoryTitle: "Technologies", articles: newsArticles})
        +news-category-preview({categoryTitle: "Entertainment", articles: newsArticles})
        +news-category-preview({categoryTitle: "Sports", articles: newsArticles})
