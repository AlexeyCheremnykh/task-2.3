@import "../../colors"

.input-field
  box-sizing border-box
  width 100%
  height 100%
  padding 0 0.3125rem 0.1875rem 0.8125rem
  background-color $grey-e5
  outline-color $grey-66
  border none
  border-radius 0.25rem
  color $grey-66
  font-family "Source Sans Pro", "Arial", sans-serif
  font-size 0.875rem
  letter-spacing 0.01em

  &::placeholder
    color $grey-88
