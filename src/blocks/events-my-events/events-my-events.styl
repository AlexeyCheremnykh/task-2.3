.events-my-events
  width: 593px
  float: left

  @media (max-width: 1085px)
    float: none

  @media (max-width: 705px)
    width: 62%
    margin: 0 auto

  &__search
    margin-bottom: 20px
    width: 100%

  &__map
    clear: both

  &__location
    margin-top: 10px
    width: 100%

  &__events
    display: flex
    flex-wrap: wrap
    justify-content: flex-start
    margin-right: -17px
    margin-top: 20px

  &__event
    margin-right: 17px
    margin-bottom: 15px

    @media (max-width: 705px)
      width: 100%

  &__next-prev-buttons
    margin-left: auto
    margin-right: auto
    width: 115px

  &__prev-button
    margin-right: 15px