extends ../layout/layout.pug

include ../stages/stages.pug
include ../location/location.pug
include ../calendar/calendar.pug
include ../arrow-button/arrow-button.pug
include ../tick-box/tick-box.pug
include ../slider/slider.pug

block content
    .event-new
        .event-new__stages
            +stages(3)
        .event-new__content
            ul
                li
                    a(href="#stage-map") 1
                li
                    a(href="#stage-second") 2
                li
                    a(href="#stage-third") 3 
            include __stage-map/event-new__stage-map.pug
            div(class="event-new__stage-second" id="stage-second")
            div(class="event-new__stage-third" id="stage-third")
            .event-new__buttons
                .event-new__button_left
                    +arrow_button("left")
                .event-new__button_right
                    +arrow_button("right")