@import "../../colors"

.location
  border-radius 0.25rem
  overflow hidden

  &__map
    height 12.6875rem

  &__footer
    box-sizing border-box
    height 4.3125rem
    background-color $main-red
    color $white
    display flex
    justify-content space-between

  &__footer-info
    font-family "Lato", "Arial", sans-serif
    margin-left 1.6875rem
    display flex
    align-items center

    @media (max-width 530px)
      margin-left 1.4375rem

  &__title
    font-weight 300
    font-size 1.875rem
    word-spacing -0.09em
    display inline-block
    margin-right 1.625rem
    padding-bottom 0.625rem

    @media (max-width 530px)
      font-size 1.5625rem
      padding-bottom 0

  &__address
    font-weight 900
    font-size 0.7813rem
    letter-spacing 0.05em
    text-transform uppercase
    display inline-block
    max-width 18.75rem

    @media (max-width 530px)
      font-size 0.6875rem

    @media (max-width 435px)
      display none

    &_hidden
      display none

  &__address-local
    max-height 1.875rem
    overflow hidden

  &__address-global
    max-height 1.875rem
    overflow hidden

  &__footer-buttons
    width 4.9375rem
    padding 1.25rem 0.8125rem 1.25rem 0
    display flex
    justify-content space-between

  &__footer-button
    width 1.875rem
    height 1.875rem

  &__my-location
    background url("img/map-my-location.png") no-repeat 0 0.0625rem

  &__pin
    background url("img/map-pin.png") no-repeat 0 0.125rem
