.sign-up
  text-align: center
  width: 420px
  margin: 0 auto
  margin-top: 20px
  font-family: "Lato", "Arial", sans-serif

  &__logo
    font-weight: 900
    font-size: 55px
    display: block
    color: #555555
    text-decoration: none

    &:active
      transform: translateY(1px)

  &__page-title
    color: #555555

  &__form
    background-color: #ffffff
    text-align: start
    padding: 20px 35px
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.2)

  &__email
    margin-bottom: 20px

   &__label
    font-size: 14px

  &__input-field
    box-sizing: border-box
    display: block
    width: 100%
    height: 35px
    border-radius: 4px
    outline: none
    border: 1px solid #bbbbbb
    background-color: #fafafa
    color: #666666
    font-family: "Lato", "Arial", sans-serif
    padding: 0 10px
    font-size: 16px
    margin-top: 5px
    margin-bottom: 20px

    &:focus
      border: 2px solid #999999

  &__button
    text-align: center
    margin: 10px 0