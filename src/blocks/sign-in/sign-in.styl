@import "../../colors"

.sign-in
  text-align: center
  height: 100%
  width: 420px
  margin: 20px auto
  font-family: "Lato", "Arial", sans-serif

  &__page-title
    color: $grey-55

  &__logo
    font-weight: 900
    font-size: 55px
    color: $grey-55
    display: block
    text-decoration: none
    text-transform: uppercase

    &:active
      transform: translateY(1px)

  &__form
    background-color: $white
    padding: 20px 35px
    box-shadow: 0 0 10px 0 $black-shadow

  &__email
    margin-bottom: 20px
    text-align: start

  &__label
    font-size: 14px

  &__input-field
    font-family: "Lato", "Arial", sans-serif
    box-sizing: border-box
    display: block
    width: 100%
    height: 35px
    border-radius: 4px
    outline: none
    border: 1px solid $grey-aa
    background-color: $white
    color: $grey-66
    padding: 0 10px
    font-size: 16px
    margin: 5px 0

    &:focus
      border: 2px solid $grey-9d

  &__password
    text-align: start

  &__forgot-password
    float: right
    text-decoration: none
    color: $blue

    &:visited
      color: $blue

  &__button
    display: block
    margin: 20px 0
    text-align: center

  &__no-account
    font-size: 14px

  &__sign-up
    color: $blue
    text-decoration: none

    &:visited
      color: $blue
