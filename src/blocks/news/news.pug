extends ../layout/layout.pug
include ../news-item/news-item.pug
include ../event/event.pug
include ../arrow-button/arrow-button.pug

mixin news_container(category)
    .news__news-container
        .news__container-category-wrapper
            a(href="#" class="news__container-category") #{category}
        .news__button-wrapper.news__button-wrapper_left
            +arrow_button("left")
        .news__news-items
            block
        .news__button-wrapper.news__button-wrapper_right
            +arrow_button("right")

block content
