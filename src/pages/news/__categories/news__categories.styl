.news
  &__categories
    position: fixed
    float: left
    text-align: center

    @media (max-width: 1350px)
      position: static
      margin-bottom: 10px

    @media (max-width: 1067px)
      float: none

    &-list
      list-style: none
      width: 200px
      height: 290px
      padding: 0
      margin: 0

      @media (max-width: 1350px)
        width: 1050px
        height: 50px

      @media (max-width: 1067px)
        width: 100%

      @media (max-width: 788px)
        display: flex
        flex-wrap: wrap
        height: 85px
        width: 300px
        margin-left: auto
        margin-right: auto
        justify-content: center

  &__category
    cursor: pointer
    display: block
    line-height: 40px

    @media (max-width: 1350px)
      display: inline-block
      margin-left: 15px
      background: none

    &-link
      text-decoration: none
      display: block
      font-family: "Lato", "Arial", sans-serif
      color: #aaaaaa

    &_selected
      background-color: #dddddd

      @media (max-width: 1350px)
        background: none

      & > a
        color: #444444

    &:hover
      background-color: #eeeeee

      @media (max-width: 1350px)
        background: none

      & .news__category-link
        @media (max-width: 1350px)
          color: #888888

  &__content
    @media (max-width: 1350px)
      margin-left: auto
      margin-right: auto