.events-my-events
  width: 593px
  float: left

  @media (max-width: 1085px)
    float: none

  @media (max-width: 705px)
    box-sizing: border-box
    width: 100%
    margin: 0 auto

  &__search
    margin-bottom: 20px
    width: 100%

  &__location
    margin-top: 10px
    width: 100%

  &__events
    margin-top: 20px
    display: flex
    flex-wrap: wrap
    justify-content: space-between

  &__event
    margin-bottom: 15px
    width: 288px

    @media (max-width: 705px)
      width: 48.563%

  &__next-prev-buttons
    margin-left: auto
    margin-right: auto
    width: 115px

  &__prev-button
    display: inline-block
    margin-right: 15px