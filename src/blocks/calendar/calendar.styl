@import "../../colors"

.calendar
  width 17.4375rem

  &__day
    font-family "Lato", "Arial", sans-serif
    font-weight 300
    font-size 5rem
    text-align center
    color $white
    padding-top 0.0625rem
    line-height 6.75rem
    letter-spacing -0.04em
    background-color $main-red
    border-radius 0.25rem 0.25rem 0 0

  &__datepicker .ui-datepicker
    width 100%
    padding 0
    border none

    &-header
      padding 0
      border none
      border-radius 0
      height 2.6875rem
      background-color $red
      color $white
      font-family "Lato", "Arial", sans-serif
      font-weight 300
      font-size 1.5rem
      letter-spacing -0.03em

    &-year
      display none

    &-prev
      position relative
      float left
      height 100%
      top 0
      left 0

    &-next
      position relative
      float right
      height 100%
      top 0
      right 0

    &-next-hover,
    &-prev-hover
      cursor pointer
      background-color $dark-red
      border none
      border-radius 0
      right 0
      left 0

    .ui-icon
      background-image none
      width 0.5625rem
      height 0.5625rem
      border-left 0.125rem solid $white
      border-bottom 0.125rem solid $white
      top 55%

      &-circle-triangle-e
        transform rotate(-135deg)

      &-circle-triangle-w
        transform rotate(45deg)
        left 59%

    &-title
      line-height 1.6em

    &-calendar
      margin 0

      th
        height 1.6875rem
        padding 0
        font-family "Lato", "Arial", sans-serif
        font-size 0.5625rem
        letter-spacing 0.05em
        color $white
        background-color $main-red

      td
        border-right 0.0625rem solid $white
        border-bottom 0.0625rem solid $white
        width 2.4375rem
        padding 0

        &:last-child
          border-right none

        .ui-state-default
          font-family "Source Sans Pro", "Arial", sans-serif
          font-size 1.25rem
          border none
          padding 0
          color $grey-86
          background-color $grey-f2
          line-height 2.4375rem
          text-align center

        .ui-state-active
          background-color $main-red
          color $white

      .ui-datepicker-other-month
        background-color $grey-f2
        opacity 1

        .ui-state-default
          color $white

  &__today
    box-sizing border-box
    width 100%
    height 3.0625rem
    background-color $grey-e5
    border-radius 0 0 0.25rem 0.25rem
    font-family "Lato", "Arial", sans-serif
    font-weight 900
    font-size 0.8125rem
    letter-spacing 0.05em
    text-transform uppercase
    color $grey-86
    padding-left 1.25rem
    text-align left
    outline none
    border none
    cursor pointer

    &:hover
      background-color $grey-de

    &:focus
      border 0.125rem solid $grey-86
      padding-left 1.125rem
      line-height 2.8125rem
