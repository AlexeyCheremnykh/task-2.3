@import "../../../colors"

.videos
  &__header
    margin-bottom 1.25rem
    padding-bottom 1.25rem
    border-bottom 0.0625rem solid $grey-e5

  &__search
    display inline-block
    margin-top 0.3125rem
    width 18.75rem

    @media (max-width 750px)
      width 12.5rem

    @media (max-width 600px)
      width 100%

  &__add-video
    display inline-block
    margin-right 0.625rem

  &__buttons
    float right

    @media (max-width 600px)
      margin-top 0.625rem
      float none
