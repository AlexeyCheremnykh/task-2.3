.toggle
    cursor: pointer

    &__label
        user-select: none
        cursor: pointer
        font-size: 17px
        font-family: "Lato"
        line-height: 26px

    &__toggle
        position: relative
        display: inline-block
        vertical-align: bottom
        margin-left: 5px
        width: 59px
        height: 24px        
        border-radius: 12px

        &::after
            position: absolute
            content: ""
            display: block
            width: 18px
            height: 18px
            border-radius: 50%
            background-color: #ffffff            
            
        &::before
            position: absolute            
            display: block
            color: #ffffff
            font-family: "Lato"
            font-weight: 900
            font-size: 12px
            letter-spacing: 0.05em
            
    &_off > &__toggle
        background-color: #e5e5e5
                
        &::after
            top: 3px
            left: 3px
                
        &::before
            content: "OFF"
            left: 26px
            top: 4px
        
    &_on > &__toggle
        background-color: #4eb7a8
            
        &::after
            top: 3px
            right: 3px
            
        &::before
            content: "ON"
            right: 29px
            top: 4px

