include ../categories-navigation/categories-navigation.pug
include ../category-preview/category-preview.pug

mixin news
    main.news
        - const newsCategories = {
        -   "All news": "/mock-address/",
        -   World: "/mock-address/",
        -   Russia: "/mock-address/",
        -   Business: "/mock-address/",
        -   Technologies: "/mock-address/",
        -   Entertainment: "/mock-address/",
        -   Sports: "/mock-address/",
        - };
        .news__categories-navigation
            +categories-navigation({categories: newsCategories, selectedCategory: "All news"})
        - const newsArticles = require("../../blocks/news/block-data/news-articles.json");
        .news__categories-preview
            +category-preview({categoryTitle: "World", articles: newsArticles})
            +category-preview({categoryTitle: "Russia", articles: newsArticles})
            +category-preview({categoryTitle: "Business", articles: newsArticles})
            +category-preview({categoryTitle: "Technologies", articles: newsArticles})
            +category-preview({categoryTitle: "Entertainment", articles: newsArticles})
            +category-preview({categoryTitle: "Sports", articles: newsArticles})
