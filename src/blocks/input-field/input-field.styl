@import "../../colors"

.input-field
  box-sizing border-box
  width 100%
  height 100%
  padding 0 0.3125rem 0.1875rem 0.8125rem
  outline-color $grey-66
  border-radius 0.25rem
  color $grey-66
  font-family "Source Sans Pro", "Arial", sans-serif
  font-size 0.875rem
  letter-spacing 0.01em

  &_color_grey
    background-color $grey-e5
    border none

  &_color_white
    border 0.0625rem solid $grey-aa
    background-color $white
    outline none

    &:focus
      border 0.125rem solid $grey-9d

  &::placeholder
    color $grey-88
