@import "../../colors"

.sign-up
  text-align: center
  width: 26.25rem
  margin: 0 auto
  margin-top: 1.25rem
  font-family: "Lato", "Arial", sans-serif

  &__logo
    font-weight: 900
    font-size: 3.4375rem
    display: block
    color: $grey-55
    text-decoration: none

    &:active
      transform: translateY(0.0625rem)

  &__page-title
    color: $grey-55

  &__form
    background-color: $white
    text-align: start
    padding: 1.25rem 2.1875rem
    box-shadow: 0 0 0.625rem 0 $black-shadow

  &__email
    margin-bottom: 1.25rem

   &__label
    font-size: 0.875rem

  &__input-field
    box-sizing: border-box
    display: block
    width: 100%
    height: 2.1875rem
    border-radius: 0.25rem
    outline: none
    border: 0.0625rem solid $grey-aa
    background-color: $white
    color: $grey-66
    font-family: "Lato", "Arial", sans-serif
    padding: 0 0.625rem
    font-size: 1rem
    margin-top: 0.3125rem
    margin-bottom: 1.25rem

    &:focus
      border: 0.125rem solid $grey-9d

  &__button
    text-align: center
    margin: 0.625rem 0
